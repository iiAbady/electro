<footer class="store-footer container p-14 pb-0 !bg-white mb-12">
<button class="text-start uppercase underline underline-offset-4 font-bold text-lg container hover:text-[#d31000] w-max">
Back to top<svg class="!inline-block align-sub m-0 ml-3" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" focusable="false">
  <path fill-rule="evenodd" clip-rule="evenodd" d="M11.2071 7.62131L5.91421 12.9142L4.5 11.5L12.2071 3.79288L19.9142 11.5L18.5 12.9142L13.2071 7.62131L13.2071 20.2071L11.2071 20.2071L11.2071 7.62131Z"></path>
</svg>
</button>
  <div aria-label="footer" class="store-footer__inner !bg-white rounded-2xl">
    <div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6">
        <div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20">
          <a href="{{ link('/') }}" class="flex items-center m-0">
            <h3>{{store.name}}</h3>
          </a>
          {% if store.description %}
            <p class="max-w-sm leading-6 mb-6">
              {{ store.description|raw }}
            </p>
          {% endif %}

          <div class="hidden lg:block">
            {% component 'footer.social' %}
          </div>

          {# vat #}
          {% if store.settings.tax.number %}
            <div class="flex rtl:space-x-reverse space-x-2 items-end">
              {% if store.settings.tax.certificate %}
                <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                  <img width="100%" height="100%" src="{{ 'images/s-empty.png' | asset }}" data-src="{{'images/tax.png' | cdn}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img class="w-full" loading="lazy" 
                  src="{{ 'images/s-empty.png' | asset }}" 
                  data-src="{{ store.settings.tax.certificate }}" 
                  alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
        </div>

        {% component 'footer.menu' %}

        <div>
          {% component 'footer.contacts' %}

          <div class="lg:hidden contact-social">
            {% component 'footer.social' %}
          </div>
        </div>

        {% component 'footer.mobile-apps' %}
    </div>
  </div>

  <div class="md:flex items-center justify-between py-4 container text-center">
    <span class="text-sm opacity-75">{% hook copyright %}</span>
    {% component 'footer.payment-methods' %}
  </div>

  <span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-1 md:grid-cols-2 md:grid-cols-3"></span>
</footer>
